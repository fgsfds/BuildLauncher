<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key='Dark'>
            <SolidColorBrush x:Key='Background'>#202020</SolidColorBrush>
            <SolidColorBrush x:Key='PopupBackground'>Black</SolidColorBrush>
            <SolidColorBrush x:Key='WindowBorder'>Black</SolidColorBrush>
            <BoxShadows x:Key='Shadow'>0 0 5 Black</BoxShadows>
        </ResourceDictionary>
        <ResourceDictionary x:Key='Light'>
            <SolidColorBrush x:Key='PopupBackground'>DarkGray</SolidColorBrush>
            <SolidColorBrush x:Key='WindowBorder'>DarkGray</SolidColorBrush>
            <BoxShadows x:Key='Shadow'>0 0 5 DarkGray</BoxShadows>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
