<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DesignWidth="800"
             d:DesignHeight="450"
             xmlns:ctrl="clr-namespace:Avalonia.Desktop.Controls"
             x:Class="Avalonia.Desktop.Pages.StandalonePage">

    <Grid RowDefinitions="*">

        <TabControl>
            <TabItem Header="Games" Margin="5">
                <ctrl:CampaignsControl Name="CampControl"/>
            </TabItem>

            <TabItem Header="Downloads" Margin="5">
                <ctrl:DownloadsControl Name="DownControl"/>
            </TabItem>

        </TabControl>

    </Grid>

</UserControl>
